<%- include('../includes/head') %>
<link rel="stylesheet" href="/css/main.css">
<link rel="stylesheet" href="/css/form.css">
<%- include('../includes/navigation') %>
<div style="display: <%= errors ? "flex" : "none" %>" id="flash">
    <p><%= errors %></p>
</div>
<div class="add_book">
    <h1>Add new book</h1>
    <form class="form" action="/admin/add-book" method="post" enctype="multipart/form-data">
        <div>
            <label for="title">Title</label>
            <input type="text" id="title" name="title" value="<%= title %>">
        </div>
        <div>
            <label for="author">Author</label>
            <input type="text" id="author" name="author" value="<%= author %>">
        </div>
        <div>
            <label for="description">Description</label>
            <input type="text" id="description" name="description" value="<%= description %>">
        </div>
        <div>
            <label for="overview">Overview</label>
            <textarea name="overview" id="overview" cols="30" rows="10"><%= overview %></textarea>
        </div>
        <div>
            <label for="imageUrl">Image</label>
            <input class="file_input" type="file" id="imageUrl" name="imageUrl">
        </div>
        <button class="btn" type="submit">Add book</button>
    </form>
</div>
<%- include('../includes/foot') %>