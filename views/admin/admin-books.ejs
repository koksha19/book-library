<%- include('../includes/head') %>
<link rel="stylesheet" href="/css/main.css">
<%- include('../includes/navigation') %>
<main>
    <div class="books">
        <% for (const book of books) { %>
            <article class="book_item">
                <div class="book">
                    <h1><%= book.title %></h1>
                    <h3><%= book.author %></h3>
                    <img src="/<%= book.imageUrl %>" alt="A book">
                    <p><%= book.description %></p>
                    <a href="/admin/edit-book/<%= book._id %>" class="btn">Edit</a>
                    <input type="hidden" value="<%= book._id %>" name="bookId">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button class="btn" type="submit" style="background: red" onclick="deleteBook(this)">Delete</button>
                </div>
            </article>
        <% } %>
    </div>
    <%- include('../includes/pagination.ejs', {
        isAdmin: isAdmin,
        page: page,
        prevPage: prevPage,
        nextPage: nextPage,
        hasPrevPage: hasPrevPage,
        hasNextPage: hasNextPage,
        lastPage: lastPage,
    }) %>
</main>
<%- include('../includes/foot') %>
<script src="/js/admin.js"></script>