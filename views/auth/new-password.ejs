<%- include('../includes/head') %>
<link rel="stylesheet" href="/css/main.css">
<link rel="stylesheet" href="/css/form.css">
<%- include('../includes/navigation') %>
<div style="display: <%= errors ? "flex" : "none" %>" id="flash">
    <p><%= errors %></p>
</div>
<div class="form">
    <h1>New password</h1>
    <form class="form_item" action="/new-password" method="post">
        <div>
            <label for="password">Password</label>
            <input type="password" id="password" name="password">
        </div>
        <div>
            <label for="conf_password">Confirm password</label>
            <input type="password" id="conf_password" name="conf_password">
        </div>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <input type="hidden" name="email" value="<%= email %>">
        <input type="hidden" name="token" value="<%= token %>">
        <input type="hidden" name="tokenExpirationDate" value="<%= tokenExpirationDate %>">
        <button class="btn" type="submit">Create new password</button>
    </form>
</div>
<%- include('../includes/foot') %>